# the vault this should not really matter)

secrets:
  - name: config-demo
    vaultPrefixes:
    - global
    fields:
    - name: secret
      onMissingValue: generate
      vaultPolicy: validatedPatternDefaultPolicy

  - name: rhpam
    vaultPrefixes:
    - global
    fields:
    - name: rhpam_api_user
      value: kieserver
    - name: rhpam_api_passwd
      value: kieserver
    - name: sso_siteadmin_password
      value: r3dh4t1!
    - name: kie_admin_user
      value: admin
    - name: kie_admin_password
      value: admin
    - name: kieserver_user_password
      value: kieserver
    - name: psql_user_name
      value: rhpam
    - name: psql_passwd
      value: rhpam
    - name: project_admin
      value: user1

  - name: fhir-psql-db
    vaultPrefixes:
    - global
    fields:
    - name: psql_credentials_secret
      value: psql-secret
    - name: psql_user_name
      value: fhir
    - name: psql_user_passwd
      value: fhir

